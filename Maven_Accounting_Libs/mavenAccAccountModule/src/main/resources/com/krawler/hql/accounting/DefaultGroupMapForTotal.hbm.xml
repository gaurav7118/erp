<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.krawler.hql.accounting.DefaultGroupMapForTotal" table="defaultgroupmapfortotal">
        <id column="id" name="ID">
            <generator class="uuid"/>
        </id>
        <property name="action" type="string">
            <column length="50" name="action"/>
        </property>
        <many-to-one class="com.krawler.hql.accounting.DefaultLayoutGroup" name="groupidtotal" not-null="true"/>
        <many-to-one class="com.krawler.hql.accounting.DefaultLayoutGroup" name="groupid" not-null="true"/>
    </class>  
</hibernate-mapping>
