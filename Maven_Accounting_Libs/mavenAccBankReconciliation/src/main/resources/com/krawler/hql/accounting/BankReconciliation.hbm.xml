<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.krawler.hql.accounting.BankReconciliation" table="bankreconciliation">
        <id column="id" name="ID">
            <generator class="uuid"/>
        </id>
        <property name="startDate" type="date">
            <column name="startdate" />
        </property>
        <property name="endDate" type="date">
            <column name="enddate" not-null="true"/>
        </property>
        <property name="clearingAmount" type="double">
            <column name="clearingamount" not-null="true"/>
        </property>
        <property name="deleted" type="true_false">
            <column name="deleteflag" not-null="true"/>
        </property>
        <property name="clearanceDate" type="date">
            <column name="clearancedate" />
        </property>        
        <property name="checkCount" type="integer">
            <column default="0" name="checkcount"/>
        </property>
        <property name="depositeCount" type="integer">
            <column default="0" name="depositecount"/>
        </property>
        <property name="seqnumber" type="integer">
            <column name="seqnumber" default='0'/>
        </property>
        <property name="autoGenerated" type="true_false">
            <column default="false" name="autogen"/>
        </property>
        <property name="datePreffixValue" type="string">
            <column length="50" name="datepreffixvalue"/>
        </property>
        <property name="dateSuffixValue" type="string">
            <column length="50" name="datesuffixvalue"/>
        </property>
        <property name="dateAfterPreffixValue" type="string">
            <column length="50" name="dateafterpreffixvalue"/>
        </property>
        <property name="reconcilenumber" type="string">
            <column name="reconcilenumber"/>
        </property>
        <property name="bankBookBalanceinAcc" type="double">
            <column name="bankbookbalanceinacc"/>
        </property>
        <property name="clearedChecksAmountinAcc" type="double">
            <column name="clearedchecksamountinacc"/>
        </property>

        <property name="clearedDepositsAmountinAcc" type="double">
            <column name="cleareddepositsamountinacc"/>
        </property>
        <property name="bankStmtBalanceinAcc" type="double">
            <column name="bankstmtbalanceinacc"/>
        </property>
        <property name="unclearedChecksAmountinAcc" type="double">
            <column name="unclearedchecksamountinacc"/>
        </property>
        <property name="unclearedDepositsAmountinAcc" type="double">
            <column name="uncleareddepositsamountinacc"/>
        </property>
        <property name="createdon" type="long">
            <column name="createdon" not-null="true"/>
        </property>
        <set cascade="all" inverse="true" name="details">
            <key column="bankReconciliation"/>
            <one-to-many class="com.krawler.hql.accounting.BankReconciliationDetail"/>
        </set>
        <set cascade="all" inverse="true" name="unreconcilationdetails">
            <key column="bankReconciliation"/>
            <one-to-many class="com.krawler.hql.accounting.BankUnreconciliationDetail"/>
        </set>
        <many-to-one class="com.krawler.hql.accounting.SequenceFormat" column="seqformat" name="seqformat"/>
        <many-to-one class="com.krawler.common.admin.User" column="createdby" name="createdby"/>
        <many-to-one class="com.krawler.hql.accounting.Account" name="account" not-null="true"/>
        <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>
    </class>
</hibernate-mapping>
