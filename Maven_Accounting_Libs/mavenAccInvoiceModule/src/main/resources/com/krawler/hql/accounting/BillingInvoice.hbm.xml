<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.krawler.hql.accounting.BillingInvoice" table="billinginvoice">
        <id column="id" name="ID">
            <generator class="uuid"/>
        </id>
        <property name="billingInvoiceNumber" type="string">
            <column length="50" name="billinginvoicenumber" not-null="true"/>
        </property>
        <property name="seqnumber" type="integer">
            <column name="seqnumber" default='0'/>
        </property>
        <many-to-one class="com.krawler.hql.accounting.SequenceFormat" column="seqformat" name="seqformat"/>
        <property name="autoGenerated" type="true_false">
            <column default="false" name="autogen" not-null="true"/>
        </property>
        <property name="billTo" type="string">
            <column length="255" name="billto" not-null="true"/>
        </property>
        <property name="shipTo" type="string">
            <column length="255" name="shipto" not-null="true"/>
        </property>
        <property name="shipDate" type="timestamp">
            <column name="shipdate"/>
        </property>
        <property name="dueDate" type="timestamp">
            <column name="duedate" not-null="true"/>
        </property>
        <property name="memo" type="string">
            <column length="1024" name="memo"/>
        </property>
        <property name="poRefNumber" type="string">
            <column length="50" name="porefno"/>
        </property>
        <property name="externalCurrencyRate" type="double">
            <column name="externalcurrencyrate" not-null="true" default='0'/>
        </property>
        <property name="deleted" type="true_false">
            <column name="deleteflag" not-null="true"/>
        </property>
        <property name="favourite" type="boolean">
            <column name="favouriteflag" not-null="false" default="false"/>
        </property>
        <property name="pendingapproval" type="integer">
            <column default="0" name="pendingapproval" not-null="true"/>
        </property>
        <property name="istemplate" type="integer">
            <column default="0" name="istemplate" />
        </property>
        <property name="shipvia" type="string">
            <column length="255" name="shipvia"/>
        </property>
        <property name="fob" type="string">
            <column length="255" name="fob"/>
        </property>
        <property name="approvallevel" type="integer">
            <column default="0" name="approvallevel" />
        </property>
        <property name="postText" type="string">
            <column  name="posttext"/>
        </property>
        <many-to-one cascade="all" class="com.krawler.hql.accounting.Discount" name="discount" unique="true"/>
        <set cascade="all" inverse="true" name="rows">
            <key column="billinginvoice"/>
            <one-to-many class="com.krawler.hql.accounting.BillingInvoiceDetail"/>
        </set>
        <many-to-one class="com.krawler.hql.accounting.Tax" column="tax" name="tax"/>
        <many-to-one class="com.krawler.hql.accounting.Customer" column="customer" name="customer"/>
        <many-to-one class="com.krawler.common.admin.User" column="salesperson" name="salesperson"/>
        <many-to-one class="com.krawler.hql.accounting.MasterItem" name="masterSalesPerson" column="mastersalesperson"/>
        <many-to-one class="com.krawler.common.admin.KWLCurrency" column="currency" name="currency"/>
        <many-to-one class="com.krawler.hql.accounting.ExchangeRateDetails" column="exchangeratedetail" name="exchangeRateDetail" not-null="true"/>
        <many-to-one cascade="all" class="com.krawler.hql.accounting.JournalEntryDetail" column="centry" name="customerEntry"  unique="true"/>
        <many-to-one cascade="all" class="com.krawler.hql.accounting.JournalEntryDetail" column="sentry" name="shipEntry" unique="true"/>
        <many-to-one cascade="all" class="com.krawler.hql.accounting.JournalEntryDetail" column="oentry" name="otherEntry" unique="true"/>
        <many-to-one cascade="all" class="com.krawler.hql.accounting.JournalEntryDetail" column="taxentry" name="taxEntry" unique="true"/>
        <many-to-one cascade="all" class="com.krawler.hql.accounting.JournalEntry" column="journalentry" name="journalEntry" not-null="true" unique="true"/>
        <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>
        <many-to-one class="com.krawler.hql.accounting.BillingInvoice" column="parentinvoice" name="parentInvoice"/>
        <many-to-one cascade="all" class="com.krawler.common.admin.RepeatedInvoices" column="repeateinvoice" name="repeateInvoice" unique="true"/>
        <many-to-one class="com.krawler.common.admin.Projreport_Template" name="templateid"/>
        <many-to-one class="com.krawler.common.admin.User" column="approver" name="approver"/>
    </class>
</hibernate-mapping>
