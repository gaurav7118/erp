<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.krawler.hql.accounting.Disbursement" table="disbursement">
        <id column="id" name="ID">
            <generator class="uuid"/>
        </id>
        <property name="loanrefnumber" type="string">
            <column length="50" name="loanrefnumber" not-null="true"/>
        </property>
        <property name="installmenttype" type="string">
            <column length="50" name="installmenttype"/>
        </property>
        <property name="termValue" type="integer">
            <column default="0" name="termvalue"/>
        </property>
        <property name="scheduletype" type="string">
            <column length="255" name="scheduletype"/>
        </property>
        <property name="loancategory" type="string">
            <column length="255" name="loancategory"/>
        </property>
<!--    <property name="surety" type="string">
      <column length="255" name="surety"/>
    </property>-->
        <property name="termType" type="string">
            <column length="50" name="termtype"/>
        </property>
        <property name="disbursementdate" type="timestamp">
            <column name="disbursementdate" not-null="true"/>
        </property>
        <property name="firstpaymentdate" type="timestamp">
            <column name="firstpaymentdate"/>
        </property>
        <property name="approveddate" type="timestamp">
            <column name="approveddate"/>
        </property>
        <property name="applicationdate" type="timestamp">
            <column name="applicationdate"/>
        </property>
        <property name="loanRate" type="double">
            <column default="0" name="loanrate"/>
        </property>
        <property name="loanFee" type="double">
            <column default="0" name="loanfee"/>
        </property>
        <property name="loanAmount" type="double">
            <column default="0" name="loanamount"/>
        </property>
        <property name="loanEligibility" type="double">
            <column default="0" name="loaneligibility"/>
        </property>
        <property name="externalCurrencyRate" type="double">
            <column default="0" name="externalcurrencyrate" not-null="true"/>
        </property>
        <property name="autoGenerated" type="true_false">
            <column default="false" name="autogen" not-null="true"/>
        </property>
        <property name="seqnumber" type="integer">
            <column default="0" name="seqnumber"/>
        </property>
        <property name="datePreffixValue" type="string">
            <column length="50" name="datepreffixvalue"/>
        </property>
        <property name="dateSuffixValue" type="string">
            <column length="50" name="datesuffixvalue"/>
        </property>
        <property name="dateAfterPreffixValue" type="string">
            <column length="50" name="dateafterpreffixvalue"/>
        </property>
        <property name="installmentinterval" type="integer">
            <column default="0" name="installmentinterval"/>
        </property>
        <property name="createdon" type="long">
            <column name="createdon" not-null="true"/>
        </property>
        <property name="updatedon" type="long">
            <column name="updatedon" not-null="true"/>
        </property>
         <property column="loanruletypevalue" name="loanRuleType">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.krawler.common.admin.LoanRuleType</param>
            </type>
        </property>
        <property name="percentloanfee" type="double">
            <column default="10" name="percentloanfee" not-null="true"/>
        </property> 
        <many-to-one class="com.krawler.hql.accounting.SequenceFormat" column="seqformat" name="seqformat"/>
        <many-to-one class="com.krawler.common.admin.KWLCurrency" column="currency" name="currency"/>
        <many-to-one cascade="all" class="com.krawler.hql.accounting.Customer" column="customer" name="customer" not-null="true"/>
        <many-to-one cascade="all" class="com.krawler.hql.accounting.Customer" column="surety" name="surety" not-null="true"/>
        <many-to-one class="com.krawler.hql.accounting.Account" name="debitaccount" column = "debitaccount" />
        <many-to-one class="com.krawler.hql.accounting.Account" name="creditaccount" column = "creditaccount" />
        <many-to-one cascade="all" class="com.krawler.hql.accounting.JournalEntryDetail" column="centry" name="customerEntry" unique="true"/>
        <many-to-one cascade="all" class="com.krawler.hql.accounting.JournalEntry" column="journalentry" name="journalEntry" unique="true"/>
        <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>
        <many-to-one class="com.krawler.common.admin.User" column="createdby" name="createdby"/>
        <many-to-one class="com.krawler.common.admin.User" column="modifiedby" name="modifiedby"/>
        <many-to-one class="com.krawler.hql.accounting.MasterItem" column="loantype" name="loanType"/>
    </class>
</hibernate-mapping>
