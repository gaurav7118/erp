<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.krawler.hql.accounting.Packing" table="packing">
        <id column="id" name="ID">
            <generator class="uuid"/>
        </id>
        <property name="packNumber" type="string">
            <column length="50" name="packnumber" not-null="true"/>
        </property>
        <property name="customer" type="string">
            <column length="50" name="customer" not-null="true"/>
        </property>
        <property name="packingDate" type="timestamp">
            <column name="packingdate" not-null="true"/>
        </property>
        <property name="memo" type="string">
            <column length="1024" name="memo"/>
        </property>
        <property name="deleted" type="true_false">
            <column name="deleteflag" not-null="true"/>
        </property>
         <property name="totalCost" type="double">
            <column name="totalcost"/>
        </property>
        <property name="seqnumber" type="integer">
            <column name="seqnumber" default='0'/>
        </property>
        <property name="autoGenerated" type="true_false">
            <column default="false" name="autogen" not-null="true"/>
        </property>
        <property name="shippedWithUPS" type="true_false">
            <column name="shippedwithups" default="'F'"/>
        </property>
        <set cascade="all" inverse="true" name="rows">
            <key column="packinglist"/>
            <one-to-many class="com.krawler.hql.accounting.PackingDetail"/>
        </set>
        <set cascade="all" inverse="true" name="upsPackageDetails">
            <key column="packing"/>
            <one-to-many class="com.krawler.hql.accounting.UpsPackageDetails"/>
        </set>
        <many-to-one class="com.krawler.hql.accounting.SequenceFormat" column="seqformat" name="seqformat"/>
        <many-to-one class="com.krawler.hql.accounting.MasterItem" name="status" column="status"/>    
        <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>        
    </class>
</hibernate-mapping>
