<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.krawler.spring.mrp.labormanagement.LabourWorkCentreMapping" table="labourworkcentremapping">
        <id column="id" name="ID">
            <generator class="uuid"/>
        </id>
        <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>
        <many-to-one class="com.krawler.spring.mrp.labormanagement.Labour" column="labour" name="labour"/>
        <many-to-one class="com.krawler.spring.mrp.workcentremanagement.WorkCentre" column="workcenter" name="workCentre"/>
    </class>
</hibernate-mapping>
