<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.krawler.spring.mrp.workcentremanagement.WorkCentre" table="workcenter">
        <id column="id" name="ID">
            <generator class="uuid"/>
        </id>
        <many-to-one class="com.krawler.hql.accounting.SequenceFormat" column="seqformat" name="seqformat"/>
        <property name="name" type="string">
            <column length="50" name="name"/>
        </property>
        <property name="workcenterid" type="string">
            <column length="50" name="workcenterid" not-null="true"/>
        </property>
        <many-to-one class="com.krawler.hql.accounting.MasterItem" name="workcenterlocation" column="workcenterlocation"/> 
        <property name="workcentercapacity" type="double">
            <column name="workcentercapacity" />
        </property>
        <many-to-one class="com.krawler.hql.accounting.MasterItem" name="worktype" column="worktype"/>
        <many-to-one class="com.krawler.hql.accounting.MasterItem" name="workcentermanager" column="workcentermanager"/>
        <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>
        <many-to-one class="com.krawler.common.admin.CostCenter" column="costcenter" name="costcenter"/>
        <many-to-one class="com.krawler.common.admin.User" column="createdby" name="createdby"/>
        <many-to-one class="com.krawler.common.admin.User" column="modifiedby" name="modifiedby"/>
        <many-to-one class="com.krawler.common.admin.InventoryWarehouse" name="warehouseid" column="warehouseid"/>
        <many-to-one class="com.krawler.hql.accounting.MasterItem" name="workcentertype" column="workcentertype"/>
        <property name="seqnumber" type="integer">
            <column default="0" name="seqnumber"/>
        </property>
        <property name="datePreffixValue" type="string">
            <column length="50" name="datepreffixvalue"/>
        </property>
        <property name="dateSuffixValue" type="string">
            <column length="50" name="datesuffixvalue"/>
        </property>
        <property name="dateAfterPreffixValue" type="string">
            <column length="50" name="dateafterpreffixvalue"/>
        </property>
        <property name="deleted" type="true_false">
            <column name="deleted"/>
        </property>
        <property name="autoGenerated" type="true_false">
            <column default="false" name="autogen" not-null="true"/>
        </property>
        <set name="machineworkcentremappings" cascade="all" inverse="true">
            <key column="workcenterid"/>
            <one-to-many class="com.krawler.spring.mrp.machinemanagement.MachineWorkCenterMapping"/>
        </set>
        <set name="labourworkcentremappings" cascade="all" inverse="true">
            <key column="workcenter"/>
            <one-to-many class="com.krawler.spring.mrp.labormanagement.LabourWorkCentreMapping"/>
        </set>
        <set name="productworkcentremappings" cascade="all" inverse="true">
            <key column="workcentreid"/>
            <one-to-many class="com.krawler.spring.mrp.workcentremanagement.ProductWorkCentreMapping"/>
        </set>
        <set name="materialworkcentremappings" cascade="all" inverse="true">
            <key column="workcentreid"/>
            <one-to-many class="com.krawler.spring.mrp.workcentremanagement.MaterialWorkCentreMapping"/>
        </set>
        <many-to-one column="accworkcentrecustomdataref" class="com.krawler.spring.mrp.workcentremanagement.WorkCentreCustomData"  name="accWorkCentreCustomData" />
        
    </class>
</hibernate-mapping>
