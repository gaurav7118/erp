<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.krawler.hql.accounting.ProductComposition" table="productcomposition" >
        <id column="id" name="ID">
            <generator class="uuid"/>
        </id>
        <property name="srno" type="integer">
            <column name="srno" default="0"/>
        </property>
        <property name="ingredients" type="string">
            <column name="ingredients"/>
        </property>
        <property name="strength" type="string">
            <column name="strength"/>
        </property>
        <many-to-one class="com.krawler.hql.accounting.Product" column="product" name="product" not-null="true"/>
        <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>
    </class>
</hibernate-mapping>