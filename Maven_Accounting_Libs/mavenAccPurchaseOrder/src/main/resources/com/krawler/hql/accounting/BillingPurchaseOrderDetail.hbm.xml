<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.krawler.hql.accounting.BillingPurchaseOrderDetail" table="billingpodetails">
    <id column="id" name="ID">
      <generator class="uuid"/>
    </id>
    <property name="srno" type="integer">
      <column name="srno" default="0"/>
    </property>
    <property name="remark" type="string">
      <column length="255" name="remark"/>
    </property>
    <property name="productDetail" type="string">
      <column length="255" name="productdetail"/>
    </property>
    <property name="discountispercent" type="integer">
      <column name="discountispercent"/>
    </property>
    <property name="discount" type="double">
      <column name="discount" not-null="false"/>
    </property>
    <property name="rowTaxAmount" type="double">
        <column name="rowtaxamount" not-null="false"/>
    </property>
    <property name="quantity" type="double">
      <column name="quantity" not-null="true"/>
    </property>
    <property name="rate" type="double">
      <column name="rate" not-null="true"/>
    </property>
    <many-to-one class="com.krawler.hql.accounting.Tax" column="tax" name="tax"/>
    <many-to-one class="com.krawler.hql.accounting.BillingPurchaseOrder" column="purchaseorder" name="purchaseOrder" not-null="true"/>
    <many-to-one cascade="all" class="com.krawler.hql.accounting.Account" column="debitfrom" name="debitFrom"/>
    <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>
  </class>
</hibernate-mapping>