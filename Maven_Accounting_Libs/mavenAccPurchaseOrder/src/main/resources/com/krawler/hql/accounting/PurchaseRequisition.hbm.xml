<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.krawler.hql.accounting.PurchaseRequisition" table="purchaserequisition">
        <id column="id" name="ID">
            <generator class="uuid"/>
        </id>
        <property name="prNumber" type="string">
            <column length="50" name="prnumber" not-null="true"/>
        </property>
        <property name="autoGenerated" type="true_false">
            <column default="false" name="autogen" not-null="true"/>
        </property>
        <property name="requisitionDate" type="date">
            <column name="requisitiondate" not-null="true"/>
        </property>
        <property name="dueDate" type="date">
            <column name="duedate" not-null="true"/>
        </property>
        <property name="memo" type="string">
            <column length="2048" name="memo"/>
        </property>
        <property name="deleted" type="true_false">
            <column name="deleteflag" not-null="true"/>
        </property>
        <property name="favourite" type="boolean">
            <column name="favouriteflag" not-null="false" default="false"/>
        </property>
        <property name="printed" type="boolean">
            <column name="printedflag" not-null="false" default="false"/>
        </property>
        <property name="perDiscount" type="true_false">
            <column name="perdiscount" not-null="true"/>
        </property>
        <property name="discount" type="double">
            <column name="discount" not-null="false"/>
        </property>
        <property name="archieve" type="integer">
            <column name="archieve" not-null="true"/>
        </property>
        <property name="approvestatuslevel" type="integer">
            <column name="approvestatuslevel" not-null="true" default='0'/>
        </property>
        <property name="seqnumber" type="integer">
            <column name="seqnumber" default='0'/>
        </property>
        <property name="datePreffixValue" type="string">
            <column length="50" name="datepreffixvalue"/>
        </property>
        <property name="dateSuffixValue" type="string">
            <column length="50" name="datesuffixvalue"/>
        </property>
        <property name="dateAfterPreffixValue" type="string">
            <column length="50" name="dateafterpreffixvalue"/>
        </property>
        <property name="isOpenInPO" type="true_false">
            <column name="isopeninpo" default="true"/>
        </property>
        <property name="fixedAssetPurchaseRequisition" type="boolean">
            <column name="isfixedassetpurchaserequisition" default="false"/>
        </property>
        <property name="isDraft" type="boolean">
            <column name="isdraft"/>
        </property>
        <property name="createdon" type="long">
            <column name="createdon" />
        </property>
        <many-to-one class="com.krawler.hql.accounting.SequenceFormat" column="seqformat" name="seqformat"/>
        <set cascade="all" inverse="true" name="rows">
            <key column="purchaserequisition"/>
            <one-to-many class="com.krawler.hql.accounting.PurchaseRequisitionDetail"/>
        </set>
        <many-to-one class="com.krawler.hql.accounting.Tax" column="tax" name="tax"/>
        <many-to-one class="com.krawler.common.admin.KWLCurrency" column="currency" name="currency" not-null="true"/>
    <!--<many-to-one cascade="all" class="com.krawler.hql.accounting.Vendor" column="vendor" name="vendor" not-null="true"/>-->
        <many-to-one column="accpurchaserequisitioncustomdataref" class="com.krawler.hql.accounting.PurchaseRequisitionCustomData"  name="purchaseRequisitionCustomData" />
        <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>
        <many-to-one class="com.krawler.common.admin.User" name="users" not-null="true"/>
        <many-to-one class="com.krawler.common.admin.Projreport_Template" name="templateid"/>
        <many-to-one class="com.krawler.common.admin.User" column="createdby" name="createdby"/>
        <many-to-one class="com.krawler.common.admin.User" column="modifiedby" name="modifiedby"/>
    </class>
</hibernate-mapping>