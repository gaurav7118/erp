<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.krawler.hql.accounting.Contract" table="contract">
        <id column="id" name="ID">
            <generator class="uuid"/>
        </id>
        <property name="contractNumber" type="string">
            <column length="50" name="contractnumber" not-null="true"/>
        </property>
        <property name="autoGenerated" type="true_false">
            <column default="false" name="autogen" not-null="true"/>
        </property>
        <property name="normalContract" type="boolean">
            <column name="isnormalcontract"/>
        </property>
        <property name="soNo" type="string">
            <column length="50" name="sono"/>
        </property>
        <property name="salesOrderNumber" type="string">
            <column length="50" name="sonumber" not-null="true"/>
        </property>
    
        <property name="orderDate" type="timestamp">
            <column name="orderdate" />
        </property>
        <property name="originalEndDate" type="timestamp">
            <column name="originalenddate" />
        </property>
<!--     <property name="fromDate" type="timestamp">
      <column name="fromdate" not-null="true"/>
    </property>
     <property name="toDate" type="timestamp">
      <column name="todate" not-null="true"/>
    </property>-->
        <property name="endDate" type="timestamp">
            <column name="enddate" not-null="true"/>
        </property>
        <property name="signDate" type="timestamp">
            <column name="signdate" />
        </property>

        <property name="moveDate" type="timestamp">
            <column name="movedate" />
        </property>
        <property name="moveOutDate" type="timestamp">
            <column name="moveoutdate" />
        </property>
     
        <property name="memo" type="string">
            <column length="2048" name="memo"/>
        </property>
    
        <property name="amount" type="double">
            <column name="amount" />
        </property>
        <property name="depositAmount" type="double">
            <column name="depositamount" />
        </property>
        <property name="createdon" type="long">
            <column name="createdon" not-null="true"/>
        </property>
    
        <property name="updatedon" type="long">
            <column name="updatedon" not-null="true"/>
        </property>
        <property name="emailID" type="string">
            <column length="50" name="emailid"/>
        </property>
        <property name="termType" type="string">
            <column length="50" name="termtype"/>
        </property>
        <property name="invoiceFrequency" type="string">
            <column name="invoicefrequency"/>
        </property>
        <property name="numberOfPeriods">
            <column name="numberofperiods"/>
        </property>
        <property name="contactPerson" type="string">
            <column length="50" name="contactperson"/>
        </property>
        <property name="seqnumber" type="integer">
            <column name="seqnumber" default='0'/>
        </property>
        <property name="datePreffixValue" type="string">
            <column length="50" name="datepreffixvalue"/>
        </property>
        <property name="dateSuffixValue" type="string">
            <column length="50" name="datesuffixvalue"/>
        </property>
        <property name="dateAfterPreffixValue" type="string">
            <column length="50" name="dateafterpreffixvalue"/>
        </property>
        <property name="srstatus" type="integer">
            <column name="srstatus" default='1'/> <!--       ['1','Pending'],['2','Pending & Closed'],['3','Done'],['4','Done & Closed']] -->
        </property>
        <property name="cstatus" type="integer">
            <column name="cstatus" default='1'/> <!--       ['1','Active'],['2','Terminate'],['3','Expire'],['4','Renew']] -->
        </property>
        <property name="agreedServices" type="integer">
            <column name="agreedservices" default='0'/>
        </property>
        <property name="termValue" type="integer">
            <column name="termvalue" default='0'/>
        </property>
        <set cascade="all" inverse="true" name="rows">
            <key column="parentContract"/>
            <one-to-many class="com.krawler.hql.accounting.ContractDetail"/>     
        </set>
        <set cascade="all" inverse="true" name="services">
            <key column="parentContract"/>
            <one-to-many class="com.krawler.hql.accounting.ServiceDetail"/>
        </set>
    
        <set cascade="all" inverse="true" name="schedulerObjects">
            <key column="contractid"/>
            <one-to-many class="com.krawler.hql.accounting.AssetMaintenanceSchedulerObject"/>
        </set>
        <many-to-one column="contractcustomdataref" class="com.krawler.hql.accounting.ContractCustomData"  name="contractCustomData" />
        <many-to-one class="com.krawler.hql.accounting.SequenceFormat" column="seqformat" name="seqformat"/>
        <many-to-one class="com.krawler.common.admin.KWLCurrency" column="currency" name="currency"/>
        <many-to-one cascade="all" class="com.krawler.hql.accounting.Customer" column="customer" name="customer" not-null="true"/>
        <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>
        <many-to-one class="com.krawler.common.admin.User" column="createdby" name="createdby"/>    
        <many-to-one class="com.krawler.common.admin.User" column="modifiedby" name="modifiedby"/>
<!--    <many-to-one class="com.krawler.hql.accounting.MasterItem" name="cstatus" column="cstatus"/>-->
<!--     <many-to-one class="com.krawler.common.admin.BillingShippingAddresses" column="billingshippingaddresses" name="billingShippingAddresses"/>-->
    </class>
</hibernate-mapping>
