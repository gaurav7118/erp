<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.krawler.hql.accounting.BillingPaymentDetail" table="billingpaymentdetails">
    <id column="id" name="ID">
      <generator class="uuid"/>
    </id>
    <property name="srno" type="integer">
      <column name="srno" default="0"/>
    </property>
    <property name="amount" type="double">
      <column name="amount" not-null="true"/>
    </property>
    <many-to-one cascade="all" class="com.krawler.hql.accounting.BillingPayment" column="billingpayment" name="billingPayment" not-null="true"/>
    <many-to-one class="com.krawler.hql.accounting.BillingGoodsReceipt" name="billingGoodsReceipt" not-null="true"/>
    <many-to-one class="com.krawler.hql.accounting.BillingInvoice" name="billingInvoice" not-null="false"/>
    <many-to-one class="com.krawler.common.admin.Company" name="company" not-null="true"/>
  </class>
</hibernate-mapping>
